# MySQL (reg.ru / любой хостинг)
# Если запускаете БЕЗ Docker и MySQL выдан хостингом — чаще всего:
#   DB_HOST=localhost
# Если запускаете ЧЕРЕЗ Docker Compose (есть сервис db) — используйте:
#   DB_HOST=db
DB_NAME=appointment_db
DB_USER=appointment_user
DB_PASSWORD=ваш_надёжный_пароль
DB_HOST=localhost
DB_PORT=3306

# Django
SECRET_KEY=сгенерируйте-длинный-секретный-ключ
DEBUG=False
ALLOWED_HOSTS=ваш-домен.ru,127.0.0.1,localhost

# Google OAuth (вход через Google + подключение Google Calendar)
# Создайте OAuth 2.0 Client ID в Google Cloud Console (APIs & Services → Credentials).
# Authorized redirect URIs (укажите БЕЗ завершающего слэша):
#   https://ваш-домен.ru/accounts/google/login/callback/
#   https://ваш-домен.ru/integrations/google/callback   ← для Google Calendar (без / в конце!)
GOOGLE_OAUTH_CLIENT_ID=ваш_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=ваш_client_secret

# Telegram бот проекта (ваш бот от @BotFather — для привязки специалиста, уведомлений, входа через Telegram)
TELEGRAM_BOT_TOKEN=токен_от_BotFather
# Username бота без @ (например: MyBookingBot)
TELEGRAM_BOT_USERNAME=ваш_бот_username
SITE_URL=https://ваш-домен.ru
# Логин администрации для кнопки «Связаться» — без @ или с @ (в коде .lstrip('@'))
ADMIN_TELEGRAM_USERNAME=andrievskypsy
