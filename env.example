# MySQL (reg.ru / любой хостинг)
# Если запускаете БЕЗ Docker и MySQL выдан хостингом — чаще всего:
#   DB_HOST=localhost
# Если запускаете ЧЕРЕЗ Docker Compose (есть сервис db) — используйте:
#   DB_HOST=db
DB_NAME=appointment_db
DB_USER=appointment_user
DB_PASSWORD=ваш_надёжный_пароль
DB_HOST=localhost
DB_PORT=3306

# Django
SECRET_KEY=сгенерируйте-длинный-секретный-ключ
DEBUG=False
ALLOWED_HOSTS=ваш-домен.ru,127.0.0.1,localhost

# Google OAuth (вход через Google + подключение Google Calendar для специалистов)
# Создайте OAuth 2.0 Client ID в Google Cloud Console (APIs & Services → Credentials).
# Authorized redirect URIs: https://ваш-домен.ru/accounts/google/login/callback/
# и для календаря: https://ваш-домен.ru/specialist/calendars/google/callback/
GOOGLE_OAUTH_CLIENT_ID=ваш_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=ваш_client_secret

# Telegram бот (для уведомлений и мини-приложения записи)
TELEGRAM_BOT_TOKEN=токен_от_BotFather
TELEGRAM_BOT_USERNAME=All_Clients_bot
SITE_URL=https://ваш-домен.ru
# Telegram администрации (кнопка «Связаться» в боте)
